<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encoding Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encoding"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/editTextBinary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter binary sequence"/>

        <!-- Spinner for encoding -->
        <Spinner
            android:id="@+id/spinnerGridSizeEncode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Code"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/imageViewCode"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Decoding Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decoding"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Spinner for decoding -->
        <Spinner
            android:id="@+id/spinnerGridSizeDecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capture Code"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/imageViewCaptured"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/textViewDecoded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decoded Binary:"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
